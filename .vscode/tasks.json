{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["watch"],
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "typescript",
          "pattern": [
            {
              "regexp": "\\[.*\\]\\s+(.*?):(\\d+):(\\d+)\\s+-\\s+(.*)",
              "file": 1,
              "line": 2,
              "column": 3,
              "message": 4
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting development server",
            "endsPattern": "Extension files prepared successfully!"
          }
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "showReuseMessage": false,
        "focus": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Terminate All Tasks",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "Build Extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["build:extension"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "build"
      }
    },
    {
      "label": "Clean Extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["clean"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "build"
      }
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
