{
    "name": "eye-note",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "app:dev": "pnpm --filter @eye-note/app dev",
        "ext:dev": "pnpm --filter @eye-note/ext dev",
        "ext:launch-chrome": "bash scripts/launch-chrome-extension.sh",
        "backend:dev": "pnpm --filter @eye-note/backend dev",
        "lint": "eslint ./apps --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint ./apps --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
        "type-check": "pnpm -r exec tsc --noEmit"
    },
    "packageManager": "pnpm@8.15.1",
    "dependencies": {
        "@eye-note/workspace": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@zenflux/eslint": "^0.1.19",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-next": "^15.2.1",
        "ts-node": "latest",
        "tsx": "^4.20.6",
        "typescript": "latest"
    }
}
