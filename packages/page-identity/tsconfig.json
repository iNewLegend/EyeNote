{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2020",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}
